<div>
  <div>
    <h1>
      <%= @the_board.name %>
    </h1>
  </div>
</div>

<hr>

<h2>Add a new post</h2>

<form action="/insert_post" method="post">
  <div>
    <label for="title_field">Title</label>
    <input id="title_field" type="text" name="title">
  </div>

  <div>
    <label for="body_field">Title</label>
    <textarea name="body" id="body_field" cols="30" rows="3"></textarea>
  </div>

  <div>
    <label for="expires_on_field">Title</label>
    <input id="expires_on_field" type="date" name="expires_on">
  </div>

 
  <input id="board_id_field" type="hidden" name="expires_on" value="<%= @the_board.id %>">

  <button>
    Add post
  </button>

</form>

<hr>
<% matching_posts = Post.where({ board_id: @the_board.id }).order({expires_on: :asc})%>
<h2>Active posts</h2>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Posted on</th>
    <th>Expires on</th>
  </tr>
  <% matching_posts.each do |a_post| %>
    <tr>
      <td><%= a_post.title %></td>
      <td><%= a_post.body %></td>
      <td><%= a_post.created_at.strftime("%b %e, %Y") %></td>
      <td><%= a_post.expires_on.strftime("%b %e, %Y") %></td>
    </tr>
  <% end %>
</table>
